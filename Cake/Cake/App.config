<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="assembliesSection" type="Cake.Configuration.AssembliesSection, Cake"/>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <!-- Here you can add dlls to modules you would like to use in your script -->
  <assembliesSection>
    <assemblies>
      <!-- <add path="Path/To/YourModule.dll" /> -->
      <add path="../../../Build/bin/Debug/Build.dll"/>
    </assemblies>
  </assembliesSection>

  <!-- configures NLog  -->
  <!-- sample NLog configuration defining one logger which writes to the console -->
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="console" xsi:type="Console"/>
      <target name="file" xsi:type="File" fileName="log.txt"/>
    </targets>
    <rules>
      <!-- a logger with a wildcard for its name, hence matches all logger names, configured             to log messages with a minimum level of Warn -->
      <logger name="*" writeTo="console, file" />
    </rules>
  </nlog>
</configuration>